<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E0E0E0" />

    <!-- Corner radius -->
    <corners android:radius="12dp" />

    <!-- Optional: Border for the rounded background -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Change the border color if needed -->

    <!-- Optional: Padding inside the background -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
